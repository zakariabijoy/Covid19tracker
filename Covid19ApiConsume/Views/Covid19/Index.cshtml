@model Covid19ApiConsume.Models.Covid19ViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-dark">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Country</th>
        <th scope="col">NewConfirmed</th>
        <th scope="col">TotalConfirmed</th>
        <th scope="col" class="text-danger">NewDeaths</th>
        <th scope="col" class="text-danger">TotalDeaths</th>
        <th scope="col" class="">NewRecovered</th>
        <th scope="col">TotalRecovered</th>
    </tr>
    </thead>
    <tbody>
    @{
        int i = 1;
    }
    @foreach (var covid in Model.Countries)
    {
        <tr>
            <th scope="row">@i</th>
            <td>@covid.Country</td>
            <td>@covid.NewConfirmed</td>
            <td>@covid.TotalConfirmed</td>
            <td>@covid.NewDeaths</td>
            <td>@covid.TotalDeaths</td>
            <td>@covid.NewRecovered</td>
            <td>@covid.TotalRecovered</td>
        </tr>

       i++;
    }


    </tbody>
</table>
